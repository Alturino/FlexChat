rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /conversations/{conversationId} {
      allow create, read, update: if request.auth != null;
    }
    match /conversation_members/{conversationMemberId} {
      allow create, read: if request.auth != null;
      allow update: if request.auth != null && if request.auth.uid == resource.data.userId;
    }
    match /messages/{messageId} {
      allow create, read: if request.auth != null;
      allow update: if request.auth != null && if request.auth.uid == resource.data.userId;
    }
    match /users/{userId} {
      allow create, read, update: if request.auth != null && if request.auth.uid == userId;
    }
  }
}
