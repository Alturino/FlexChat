{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "singleProjectMode": false,
    "auth": {
      "host": "0.0.0.0",
      "port": 9099
    },
    "functions": {
      "host": "0.0.0.0",
      "port": 5001
    },
    "firestore": {
      "host": "0.0.0.0",
      "port": 8080
    },
    "ui": {
      "host": "0.0.0.0",
      "enabled": true
    },
    "storage": {
      "host": "0.0.0.0",
      "port": 9199
    },
    "pubsub": {
      "host": "0.0.0.0",
      "port": 8085
    }
  },
  "functions": [
    {
      "source": "functions",
      "ignore": ["node_modules", ".git", "firebase-debug.log", "firebase-debug.*.log"],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ],
      "codebase": "default"
    }
  ],
  "storage": {
    "rules": "storage.rules"
  }
}
